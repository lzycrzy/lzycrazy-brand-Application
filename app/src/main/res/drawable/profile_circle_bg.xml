<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Fill color for the profile circle -->
    <solid android:color="#E0E0E0" />

    <!-- Optional: white border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Fixed size (optional if you want it scalable) -->
    <size
        android:width="48dp"
        android:height="48dp" />

</shape>
