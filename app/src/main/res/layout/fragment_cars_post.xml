<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/postCarScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top Bar -->
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_rounded_bg"
            android:padding="8dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cars"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cross"
                android:layout_alignParentEnd="true"
                android:contentDescription="Close" />
        </RelativeLayout>

        <!-- Category Buttons -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="8dp">

            <Button
                android:text="Cars" style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/black" />
            <Button
                android:textColor="@color/black"
                android:text="Sub Category 2" style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            <Button
                android:textColor="@color/black"
                android:text="Sub Category 2" style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
            <Button
                android:textColor="@color/black"
                android:text="Sub Category 2" style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </GridLayout>

        <!-- Include Some Details -->
        <TextView
            android:text="Include some details"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Form Inputs -->
        <Spinner
            android:id="@+id/brandSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:hint="Brand"
            android:background="@drawable/rounded_edittext2"
            android:padding="12dp"
            android:popupBackground="@android:color/white"
            android:prompt="@string/select_brand"
            android:spinnerMode="dropdown" />



        <EditText
            android:id="@+id/editTextYear"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:background="@drawable/rounded_edittext2"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#757575"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextKMDriven"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="KM Driven"
            android:background="@drawable/rounded_edittext2"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#757575"
            android:inputType="number"/>
        <EditText
            android:id="@+id/editTextAdTitle"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="AD title"
            android:background="@drawable/rounded_edittext2"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#757575"
            android:inputType="text"/>
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:background="@drawable/rounded_edittext2"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#757575"
            android:inputType="text"/>
        <EditText
            android:id="@+id/editTextPrice"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:background="@drawable/rounded_edittext2"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#757575"
            android:inputType="number"/>

        <!-- Fuel, Owner, Transmission Options -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <!-- Fuel Column -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuel"
                    android:textStyle="bold" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CNG &amp; Hybrids" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diesel" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electric" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LPG" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Petrol" />
            </LinearLayout>

            <!-- Owner Column -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. of Owners"
                    android:textStyle="bold" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2nd" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4st" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4+" />
            </LinearLayout>

            <!-- Transmission Column -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transmission"
                    android:textStyle="bold" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automatic" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual" />
            </LinearLayout>
        </LinearLayout>


        <!-- Upload Photos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload up to 08 photos"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="83dp"
            android:layout_height="81dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/add_photo_border"
            android:padding="8dp"
            android:layout_margin="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_camera_add"
                android:contentDescription="@string/add_photo_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Photo"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>



        <!-- Location Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm your location"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTextState"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:background="@drawable/rounded_edittext2"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="#757575"
                android:inputType="text"/>


            <EditText
                android:id="@+id/editTextCity"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:background="@drawable/rounded_edittext2"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="#757575"
                android:inputType="text" />


            <EditText
                android:id="@+id/editTextCurrentLocation"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current location"
                android:background="@drawable/rounded_edittext2"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="#757575"
                android:inputType="text" />

        </LinearLayout>


        <!-- Post Button -->
        <Button
            android:id="@+id/postNowButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Post Now"
            app:backgroundTint="@null"
            android:textColor="@android:color/white"
            android:background="@drawable/blue_button" />

    </LinearLayout>
</ScrollView>