<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Circular ImageView for Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_dummy_friend"
        app:civ_border_color="#E4E6EB"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="#E4E6EB" />

    <!-- Friend Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- Friend Name -->
        <TextView
            android:id="@+id/friendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumit Kumar"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Friend Status -->
        <TextView
            android:id="@+id/friendStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="You're now friends with Aman 1y"
            android:textColor="#606770"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:41"
        android:textColor="#606770"
        android:textSize="12sp" />
</LinearLayout>