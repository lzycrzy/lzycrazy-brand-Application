<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorWhite">

    <!-- Top Header -->
    <TextView
        android:id="@+id/friendsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:textColor="@color/denim_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Search LzyCrazy..."
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:padding="10dp"
        android:background="@drawable/input_bg_round"
        android:layout_marginBottom="8dp" />

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/tabAllFriends"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="All friends"
            android:textColor="@color/denim_blue"
            android:backgroundTint="@color/colorWhite" />

        <Button
            android:id="@+id/tabFollowing"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Following"
            android:textColor="@color/denim_blue"
            android:backgroundTint="@color/colorWhite" />

        <Button
            android:id="@+id/tabFindFriend"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Find friend"
            android:textColor="@color/denim_blue"
            android:backgroundTint="@color/colorWhite" />
    </LinearLayout>

    <!-- Friend List RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>
</LinearLayout>
