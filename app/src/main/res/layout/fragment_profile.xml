<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/lzycrazy_logo"
            >

            <!-- White bottom strip -->
            <View
                android:id="@+id/whiteBackground"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white" />

            <!-- Profile image container -->
            <FrameLayout
                android:id="@+id/profileImageContainer"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile_placeholder"
                    android:background="@drawable/ic_circle_background"
                    android:contentDescription="Profile Image"
                    android:clipToOutline="true" />


                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_camera_add"
                    android:background="@drawable/circle_background"
                    android:padding="2dp" />
            </FrameLayout>

            <!-- Name and Friends Count -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/profileImageContainer"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="-8dp"
            android:layout_toEndOf="@id/profileImageContainer"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/friendCoun1t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128 "
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/friendCount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" friends"
                    android:textColor="@color/colorGrey"
                    android:textSize="14sp" />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LightGrey"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="#F2F3F5"
            android:layout_marginTop="8dp"
            android:baselineAligned="false"
            android:weightSum="10">

            <!-- Add to Story Button -->
            <Button
                android:id="@+id/btn_add_story"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="Add to story"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="@color/denim_blue"
                app:backgroundTint="@null"
                android:drawablePadding="8dp"
                android:padding="0dp"
                android:background="@drawable/topdown_rounded_bg" />

            <!-- Spacer -->
            <Space
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="Edit profile"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="@color/denim_blue"
                app:backgroundTint="@null"
                android:drawablePadding="8dp"
                android:padding="0dp"
                android:background="@drawable/topdown_rounded_bg" />

            <!-- Spacer -->
            <Space
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <!-- Three Dots Settings Icon -->
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:backgroundTint="#E4E6EB"
                android:src="@drawable/outline_settings_threeline"
                android:background="@drawable/topdown_rounded_bg"
                android:contentDescription="Settings"
                android:scaleType="centerInside"
                android:padding="8dp" />
        </LinearLayout>


        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/profile_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Posts"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textStyle="bold"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textStyle="bold"
                android:padding="12dp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardIntroSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/introTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="  Intro"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnAddBio"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/topdown_rounded_bg"
                        android:backgroundTint="#C3C3C3"
                        app:backgroundTint="@null"
                        android:text="Add Bio"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnEditDetails"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/topdown_rounded_bg"
                        android:backgroundTint="#C3C3C3"
                        app:backgroundTint="@null"
                        android:text="Edit Details"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Post Caption EditText -->
        <EditText
            android:id="@+id/edit_post_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write a caption..."
            android:drawableEnd="@drawable/ic_photos"
            android:background="@drawable/topdown_rounded_bg"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Friends CardView -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Title Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:weightSum="1">

                            <TextView
                                android:layout_weight="0.7"
                                android:text="Friends"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_weight="0.3"
                                android:text="See all friends"
                                android:textSize="14sp"
                                android:textColor="#1877F2"
                                android:gravity="end"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <TextView
                            android:text="128 friends"
                            android:textSize="13sp"
                            android:textColor="#808080"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <!-- Grid of Friends -->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="3"
                            android:rowCount="2"
                            android:layout_marginTop="12dp"
                            android:alignmentMode="alignMargins"
                            android:columnOrderPreserved="false"
                            android:padding="8dp">

                            <!-- Friend 1 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/friend1"
                                    android:background="@drawable/topdown_rounded_bg"
                                    android:clipToOutline="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Salman"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="13sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- Friend 2 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/friend2"
                                    android:background="@drawable/topdown_rounded_bg"
                                    android:clipToOutline="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ziya Faridi"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="13sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- Friend 3 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/friend3"
                                    android:background="@drawable/topdown_rounded_bg"
                                    android:clipToOutline="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Shubam"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="13sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- Friend 4 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/friend4"
                                    android:background="@drawable/topdown_rounded_bg"
                                    android:clipToOutline="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Salman"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="13sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- Friend 5 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/friend5"
                                    android:background="@drawable/topdown_rounded_bg"
                                    android:clipToOutline="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ziya Faridi"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="13sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>

                            <!-- Friend 6 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/friend6"
                                    android:background="@drawable/topdown_rounded_bg"
                                    android:clipToOutline="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Shubam"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="13sp"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </GridLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</ScrollView>
