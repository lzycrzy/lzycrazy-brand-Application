<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="32dp"
    android:background="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/editProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Profile Image with Upload Icon -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:contentDescription="@string/profile_image"
                android:clipToOutline="true" />

            <ImageView
                android:id="@+id/uploadIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="6dp"
                android:src="@drawable/ic_camera_add"
                android:background="@drawable/circle_white_shadow"
                android:padding="6dp"
                android:elevation="2dp" />
        </FrameLayout>

        <!-- First Name -->
        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext2"
            android:layout_marginBottom="12dp" />

        <!-- Last Name -->
        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext2"
            android:layout_marginBottom="12dp" />



        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@drawable/topdown_rounded_bg"
                android:backgroundTint="@color/LightGrey"
                app:backgroundTint="@null"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:background="@drawable/topdown_rounded_bg"
                android:backgroundTint="#2196F3"
                app:backgroundTint="@null"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

</androidx.cardview.widget.CardView>
