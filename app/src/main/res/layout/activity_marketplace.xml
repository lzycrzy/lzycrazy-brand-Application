<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="#F9F9F9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCategoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="8dp"
                android:text="Categories"
                android:textColor="#333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategoryList"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:padding="0dp"
                tools:listitem="@layout/item_category" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:padding="8dp">

            <!-- Banner Container (ViewPager + Static Banners) -->
            <LinearLayout
                android:id="@+id/bannerContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_bg_white"
                    android:elevation="4dp">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/viewPagerBannerNew"
                        android:name="com.example.lzycrazy.withoutlogin.marketplace.MarketplacePropertyImagesFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp"
                        tools:layout="@layout/fragment_marketplace_banner_images" />
                </FrameLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/banner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/banner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/banner4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />
            </LinearLayout>

            <!-- RecyclerView for Subcategory Items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBannerList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:listitem="@layout/item_property_banner" />

            <!-- Empty view if no banners -->
            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                android:text="There is no listing for this type of category"
                android:textSize="18sp"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>