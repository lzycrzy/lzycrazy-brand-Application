<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/lzycrazy_logo">

            <!-- White bottom strip -->
            <View
                android:id="@+id/whiteBackground"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white" />

            <!-- Profile image container -->
            <FrameLayout
                android:id="@+id/profileImageContainer"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile_placeholder"
                    android:background="@drawable/ic_circle_background"
                    android:contentDescription="Profile Image"
                    android:clipToOutline="true" />

                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_camera_add"
                    android:background="@drawable/circle_background"
                    android:padding="2dp" />
            </FrameLayout>

            <!-- Name and Friends Count -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/profileImageContainer"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="-8dp"
                android:layout_toEndOf="@id/profileImageContainer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="Jaahid Hasan"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/friendCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="128 "
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/friendCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" friends"
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGrey" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="#F2F3F5"
            android:layout_marginTop="8dp"
            android:baselineAligned="false"
            android:weightSum="10">

            <!-- Add to Story Button -->
            <Button
                android:id="@+id/btn_add_story"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="Add to story"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/topdown_rounded_bg"
                android:drawablePadding="8dp"
                android:padding="0dp"
                app:backgroundTint="@null"
                android:backgroundTint="@color/denim_blue" />

            <!-- Spacer -->
            <Space
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:text="Edit profile"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/topdown_rounded_bg"
                android:drawablePadding="8dp"
                android:padding="0dp"
                app:backgroundTint="@null"
                android:backgroundTint="@color/denim_blue" />

            <!-- Spacer -->
            <Space
                android:layout_width="25dp"
                android:layout_height="match_parent" />

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_settings_threeline"
                android:background="@drawable/topdown_rounded_bg"
                android:backgroundTint="#E4E6EB"
                android:contentDescription="Settings"
                android:scaleType="centerInside"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/profile_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts"
                android:textStyle="bold"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textStyle="bold"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textStyle="bold"
                android:padding="12dp" />
        </LinearLayout>

        <!-- About Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Edit Button -->
                <Button
                    android:id="@+id/btnEditDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Details"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/colorWhite"
                    app:backgroundTint="@null"
                    android:textColor="#000000"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/ic_edit_"
                    android:padding="8dp"
                    android:drawablePadding="4dp" />

                <!-- Info Items RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/aboutRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnEditDetails"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
