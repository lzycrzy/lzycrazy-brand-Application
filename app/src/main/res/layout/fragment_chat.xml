<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Top Navigation Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/topNavigationFragmentContainer"
        android:name="com.example.lzycrazy.TopNavigationFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_top_navigation" />

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Chat Title -->
        <TextView
            android:id="@+id/chatTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chat"
            android:textColor="#606770"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Action Icons -->
        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Edit chats"
            android:src="@drawable/ic_more_horizontal" />

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Menu"
            android:src="@drawable/ic_edit" />
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg_round"
        android:drawableStart="@drawable/icons8_search_120"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Search Messenger"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <!-- Blue Background Button -->
        <ImageButton
            android:id="@+id/blueButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/blue_button_bg"
            android:contentDescription="Person"
            android:src="@drawable/ic_friends"
            app:tint="@android:color/white" />

        <!-- Gray Background Button -->
        <ImageButton
            android:id="@+id/grayButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/gray_button_bg"
            android:contentDescription="Add"
            android:src="@drawable/ic_add_friends"
            app:tint="#606770" />
    </LinearLayout>

    <!-- RecyclerView for Friends List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendsListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_friend_list" />

</LinearLayout>