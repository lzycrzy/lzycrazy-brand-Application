<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <!-- Form Title & Labels -->
    <style name="FormTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="FormLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="FormFieldLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <!-- Form Input -->
    <style name="FormInput">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="FormButton">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Sidebar -->
    <style name="SidebarMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SidebarCardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/rounded_white_shadow</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SidebarMenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="SidebarMenuText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1A237E</item>
    </style>

    <!-- Buttons -->
    <style name="LzyCrazyPill" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_white_button</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CategoryButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:backgroundTint">#EEEEEE</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <!-- Input Fields -->
    <style name="LzyCrazyInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_input_bg</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="EditField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#DDDDDD</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SpinnerField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- ImageView Styles -->
    <style name="CircleImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedInputStyle" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Dialog -->
    <style name="RoundedDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/dialog_rounded_bg</item>
    </style>

</resources>
