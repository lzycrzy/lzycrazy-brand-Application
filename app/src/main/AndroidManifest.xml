<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lzycrazy">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/lzycrazy_logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lzycrazy_logo_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.LzyCrazy"
        tools:targetApi="31">
        <activity
            android:name=".HomeScreenActivity"
            android:exported="false" />
        <activity
            android:name=".ServicesActivity"
            android:exported="false" />
        <activity
            android:name=".HiringActivity"
            android:exported="false" />
        <activity
            android:name=".MarketplaceActivity"
            android:exported="false" />
        <activity
            android:name=".NewsActivity"
            android:exported="false" />
        <activity
            android:name=".AboutUsActivity"
            android:exported="false"
            android:theme="@style/Theme.LzyCrazy" />
        <activity
            android:name=".LzyMarketplaceActivity"
            android:exported="false" />
        <!-- Splash screen: App splash Screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Sign Up screen: only accessed from app internally -->
        <activity
            android:name=".SignupActivity"
            android:exported="false" /> <!-- Login screen: only accessed from app internally -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" /> <!-- Home screen: launcher, must be exported true -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
    </application>

</manifest>