<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lzycrazy">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/lzycrazy_logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lzycrazy_logo_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.LzyCrazy"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Splash screen: App splash Screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeActivity"
            android:exported="true" />

        <activity
            android:name=".auth.SignupActivity"
            android:exported="false" />

        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".auth.ForgotPasswordActivity"
            android:exported="false" />

        <activity
            android:name=".HomeScreenActivity"
            android:exported="false" />

        <activity
            android:name=".withoutlogin.marketplace.MarketplaceActivity"
            android:exported="false" />
        <activity
            android:name=".withlogin.marketplace.MarketplaceActivity"
            android:exported="false" />

        <activity
            android:name=".withoutlogin.NewsActivity"
            android:exported="false" />

        <activity
            android:name=".withoutlogin.AboutUsActivity"
            android:exported="false"
            android:theme="@style/Theme.LzyCrazy" />

        <activity
            android:name=".withoutlogin.services.ServicesActivity"
            android:exported="false" />
        <activity
            android:name=".withlogin.chat.ChatDetailActivity"
            android:exported="false" />
        <activity
            android:name=".withlogin.chat.ChatsActivity"
            android:exported="false" />

    </application>
</manifest>
